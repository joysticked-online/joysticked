{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "api.dockerfile"
  },
  "deploy": {
    "startCommand": "cd /app/apps/api && bun run db:migrate && ./server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
